pipeline {
    environment {
        AWS_ACCESS_KEY_ID     = credentials('AWS_ACCESS_KEY_ID')
        AWS_SECRET_ACCESS_KEY = credentials('AWS_SECRET_ACCESS_KEY')
    }

    agent any

    stages {
        stage('Checkout') {
            steps {
                script {
                    dir("terraform") {
                        git branch: 'jenkins-terr', credentialsId: 'git-id', url: 'https://github.com/nidakhan99/prometheus_data.git'
                        sh 'chmod +x /var/lib/jenkins/workspace/terraform1/terraform/ROOT_MODULE'
                    }
                }
            }
        }

        stage('terraform init') {
            steps {
                sh 'pwd;cd terraform/ROOT_MODULE ; terraform init'
            }
        }

        stage('Plan') {
            steps {
                sh 'pwd;cd terraform/ROOT_MODULE ; terraform plan -out tfplan'
                sh 'pwd;cd terraform/ROOT_MODULE; terraform show -no-color tfplan > tfplan.txt'
            }
        }

        stage('terraform Action') {
            steps {
                script {
                    def action = input(
                        message: 'Do you want to apply or destroy?',
                        parameters: [string(defaultValue: 'apply', description: 'apply or destroy', name: 'action')]
                    )
                    echo "Terraform action is â€“> ${action}"
                    sh "cd terraform/ROOT_MODULE && terraform ${action} -auto-approve"
                }
            }
        }
    }
}
